  <script>
    $('#search').on('submit', function() {
      var searchtoken = localStorage.getItem('token');
      var scope = angular.element(document.getElementById('lecturer_mainmenu')).scope();
      var current_course = scope.current_course;
      alert(current_course);
      var formAction = $('#search').attr('action'); 
     $('#search').attr('action', formAction+current_course+'/'+searchtoken);
